<div id="super_simple_cms">
<p>
  <b>Title:</b>
  <%=h @page.title %>
</p>

<p>
  <b>Perma link:</b>
  <%=h @page.perma_link %><br/>
</p>
<p>
	<b>Full URL:</b>
	<%= h view_page_url(@page.perma_link) %>
</p>

<p>
  <b>Body:</b><br/>
  <%= @page.html %>
</p>

<p>
  <b>Linkable:</b>
  <%=h @page.linkable %>
